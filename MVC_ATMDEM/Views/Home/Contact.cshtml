@section scripts{

    @*<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>*@
    
    <script>
        $('#contactForm').submit(function () {
            $('#progress').show();
            $.post('', { message: $('#message').val() })
                .done(function (response) {
                    setTimeout(function() { $('#formSection').html(response); }, 2000);
                });
            return false;
        })
    </script>
}

